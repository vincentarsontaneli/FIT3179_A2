{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/data/data_grouped_2.csv"
  },
  "vconcat": [
    {
      "width": 800,
      "height": 300,
      "transform": [
        {"filter": {"param": "brush"}}
      ],
      "mark": "rect",
      "encoding": {
        "x": {"field": "Hour", "type": "ordinal", "axis": {"labelAngle": 0}},
        "y": {
          "field": "Dayweek",
          "type": "ordinal",
          "sort": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
          "title": "Day",
          "axis": {"labelAngle": 0}
        },
        "color": {"field": "Crash_Count", "aggregate": "sum", "type": "quantitative"},
        "tooltip": [
          {"field": "Dayweek", "type": "ordinal", "title": "Day"},
          {"field": "Hour", "type": "ordinal", "format": ","},
          {"field": "Crash_Count", "aggregate": "sum", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "width": 800,
      "height": 100,
      "mark": "line",
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {
          "field": "Year-Month",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "grid": false, "format": "%Y"}
        },
        "y": {"field": "Crash_Count", "aggregate": "sum", "title": "Count"},
        "tooltip": [
          {"field": "Month", "type": "ordinal"},
          {"field": "Year", "type": "ordinal", "format": ","},
          {"field": "Crash_Count", "aggregate": "sum", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}