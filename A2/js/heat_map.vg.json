{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/data/data_grouped_4.csv"
  },
  "vconcat": [
    {
      "width": 650,
      "height": 200,
      "encoding": {
        "x": {
          "field": "Year-Month",
          "timeUnit": "yearmonth",
          "axis": {
            "title": "",
            "grid": false,
            "tickCount": {
              "interval": "month",
              "step": 3
            }
          }
        }
      },
      "layer": [
        {
          "encoding": {
            "y": {
              "field": "Crash_Count",
              "aggregate": "sum",
              "type": "quantitative",
              "title": "Fatal Crashes"
            }
          },
          "layer": [
            {
              "mark": {
                "type": "line",
                "stroke": "red"
              }
            },
            {
              "transform": [
                {
                  "filter": {
                    "param": "hover",
                    "empty": false
                  }
                }
              ],
              "mark": {
                "type": "point"
              }
            }
          ]
        },
        {
          "mark": "rule",
          "encoding": {
            "opacity": {
              "condition": {
                "value": 0.3,
                "param": "hover",
                "empty": false
              },
              "value": 0
            },
            "tooltip": [
              {
                "field": "Year-Month",
                "type": "temporal",
                "format": "%b %Y",
                "title": "Date"
              },
              {
                "field": "Crash_Count",
                "aggregate": "sum",
                "type": "quantitative",
                "title": "Fatal Crashes"
              }
            ]
          },
          "params": [
            {
              "name": "brush",
              "select": {
                "type": "interval",
                "encodings": [
                  "x"
                ]
              }
            },
            {
              "name": "hover",
              "select": {
                "type": "point",
                "fields": [
                  "Year-Month"
                ],
                "nearest": true,
                "on": "mouseover",
                "clear": "mouseout"
              }
            }
          ]
        }
      ]
    },
    {
      "width": 650,
      "height": 225,
      "transform": [
        {
          "filter": {
            "param": "brush"
          }
        }
      ],
      "mark": "rect",
      "encoding": {
        "x": {
          "field": "Hour",
          "type": "ordinal",
          "axis": {
            "labelAngle": 0
          }
        },
        "y": {
          "field": "Dayweek",
          "type": "ordinal",
          "sort": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ],
          "title": "Day",
          "axis": {
            "labelAngle": 0
          }
        },
        "color": {
          "field": "Crash_Count",
          "aggregate": "sum",
          "title": "Fatal Crashes",
          "type": "quantitative",
          "scale": {
            "scheme": "reds"
          },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal"
          }
        },
        "tooltip": [
          {
            "field": "Dayweek",
            "type": "ordinal",
            "title": "Day"
          },
          {
            "field": "Hour",
            "type": "ordinal",
            "format": ","
          },
          {
            "field": "Crash_Count",
            "aggregate": "sum",
            "title": "Fatal Crashes",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    }
  ]
}