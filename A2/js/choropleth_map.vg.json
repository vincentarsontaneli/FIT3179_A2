{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 650,
    "projection": {
        "type": "mercator"
    },
    "params": [
        {
            "name": "year_slider",
            "value": 2020,
            "bind": {
                "input": "range",
                "min": 2015,
                "max": 2020,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/js/SA4_2016_AUST.json",
                "format": {
                    "type": "topojson",
                    "feature": "SA4_2016_AUST"
                }},
            "transform": [
                {
                    "calculate": "'No fatal road transport crash reported in ' + datum.properties.SA4_NAME16",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/data/data_grouped_5.csv"
            },
            "transform": [
                {
                    "lookup": "SA4 Name 2016",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/js/SA4_2016_AUST.json",
                            "format": {
                                "type": "topojson",
                                "feature": "SA4_2016_AUST"
                            }
                        },
                        "key": "properties.SA4_NAME16"
                    },
                    "as": "geo"
                },
                {"filter": "datum.Year == year_slider"}
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "shape": {"field":"geo", "type":"geojson"},
                "color": {
                    "field": "Crash_Rate",
                    "title": "Fatal Crashes per 100,000 population",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5,10,15,20
                        ],
                        "range": [
                            "#fee0d2",
                            "#fcae91",
                            "#fb6a4a",
                            "#de2d26",
                            "#a50f15"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "SA4 Name 2016",
                        "type": "nominal",
                        "title": "SA4"
                    },
                    {
                        "field": "State",
                        "type": "nominal"
                    },
                    {
                        "field": "Crash_Rate",
                        "type": "quantitative",
                        "title": "Fatal Crashes per 100,000 population"
                    },
                    {
                        "field": "Fatality_Rate",
                        "type": "quantitative",
                        "title": "Deaths per 100,000 population"
                    }
                ]
            }
        }
    ]
}