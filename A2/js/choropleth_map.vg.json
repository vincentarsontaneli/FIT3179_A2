{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Road Crashes in Australia (2015-2021)",
    "width": 1200,
    "height": 900,
    "projection": {
        "type": "mercator"
    },
    "config": {
        "background": "#F3FAF9"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/js/SA4_2016_AUST.json",
        "format": {
            "type": "topojson",
            "feature": "SA4_2016_AUST"
        }
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.SA4_NAME16",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "transform": [
                {
                    "lookup": "properties.SA4_NAME16",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/data/data_grouped.csv"
                        },
                        "key": "SA4",
                        "fields": [
                            "Crash Rate per 100,000 population"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "Crash Rate per 100,000 population",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            25,
                            50,
                            75,
                            100
                        ],
                        "range": [
                            "#fee5d9",
                            "#fcae91",
                            "#fb6a4a",
                            "#de2d26",
                            "#a50f15"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.SA4_NAME16",
                        "type": "nominal",
                        "title": "SA4"
                    },
                    {
                        "field": "Crash Rate per 100,000 population",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}