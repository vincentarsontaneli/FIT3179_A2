{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Road Crashes in Australia (2015-2021)",
    "width": 1200,
    "height": 900,
    "projection": {
        "type": "mercator"
    },
    "params": [
        {
            "name": "Year_filter",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 2015,
                "max": 2021,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/js/SA4_2016_AUST.json",
                "format": {
                    "type": "topojson",
                    "feature": "SA4_2016_AUST"
                }},
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.SA4_NAME16",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/data/data_grouped_5.csv"
            },
            "transform": [
                {
                    "lookup": "Entity",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/js/SA4_2016_AUST.json",
                            "format": {
                                "type": "topojson",
                                "feature": "SA4_2016_AUST"
                            }
                        },
                        "key": "properties.SA4_NAME16"
                    },
                    "as": "geo"
                },
                {"filter": "datum.Year == Year_filter"}
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "Crash_Rate",
                    "title": "Crash Count per 100,000 population",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            40,
                            60,
                            80,
                            100
                        ],
                        "range": [
                            "#fee0d2",
                            "#fcae91",
                            "#fb6a4a",
                            "#de2d26",
                            "#a50f15"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.SA4_NAME16",
                        "type": "nominal",
                        "title": "SA4"
                    },
                    {
                        "field": "Crash_Rate",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}