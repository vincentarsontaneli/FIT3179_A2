{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "COVID-19 Cases per Country (13 Oct 2020)",
    "data": {
        "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/data/data_grouped.csv"
    },
    "transform": [
        {"calculate": "datum.Fatality Count/datum.Crash Count",
        "as": "Average Death"}
    ],
    "mark": "circle",
    "encoding": {
        "x": {
            "field": "Crash Count",
            "type": "quantitative"
        },
        "y": {
            "field": "Average Death",
            "type": "quantitative"
        },
        "color": {
            "field": "State",
            "type": "nominal"
        },
        "size": {
            "field": "Estimated Population",
            "type": "quantitative"
        }
    }
}