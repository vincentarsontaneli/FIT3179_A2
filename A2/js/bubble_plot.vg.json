{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "COVID-19 Cases per Country (13 Oct 2020)",
    "data": {
        "url": "https://raw.githubusercontent.com/vincenttaneli/FIT3179_A2/main/A2/data/data_grouped.csv"
    },
    "transform": [
        {"calculate": "datum.Fatality_Count/datum.Crash_Count",
        "as": "Average Death Count"}
    ],
    "mark": "circle",
    "encoding": {
        "x": {
            "field": "Crash_Count",
            "type": "quantitative"
        },
        "y": {
            "field": "Average Death Count",
            "type": "quantitative",
            "scale": {"domain": [1, 1.22]}
        },
        "color": {
            "field": "State",
            "type": "nominal"
        },
        "size": {
            "field": "Population",
            "type": "quantitative"
        },
        "tooltip": [
            {"field": "SA4", "type": "nominal"},
            {"field": "State", "type": "nominal"},
            {"field": "Population", "type": "quantitative", "format": ","},
            {"field": "Crash_Count", "type": "quantitative", "format": ","},
            {"field": "Fatality_Count", "type": "quantitative", "format": ","},
            {"field": "Average Death Count", "type": "quantitative", "format": ","}
            ]
    }
}